<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="addUserPane" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.AddUserController">
    <children>
        <Label text="Add New User" layoutX="14" layoutY="14" />
        <TextField fx:id="nameField" layoutX="14" layoutY="50" promptText="Name" />
        <TextField fx:id="emailField" layoutX="14" layoutY="90" promptText="Email" />
        <ComboBox fx:id="roleComboBox" layoutX="14" layoutY="130" />
        <Button text="Add User" layoutX="14" layoutY="170" onAction="#handleAddUser" />
        <Label fx:id="confirmationLabel" layoutX="14" layoutY="210" />
    </children>
</AnchorPane>
