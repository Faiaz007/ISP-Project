<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.isp.faiaz.ChangePlanController">
    <children>

        <Label layoutX="20.0" layoutY="14.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Change Internet Plan" />

        <Label layoutX="20.0" layoutY="60.0" text="User ID:" />
        <TextField fx:id="userIdField" layoutX="150.0" layoutY="55.0" prefWidth="200.0" />

        <Label layoutX="20.0" layoutY="100.0" text="Current Plan:" />
        <ComboBox fx:id="currentPlanComboBox" layoutX="150.0" layoutY="95.0" prefWidth="200.0" />

        <Label layoutX="20.0" layoutY="140.0" text="New Plan:" />
        <ComboBox fx:id="planComboBox" layoutX="150.0" layoutY="135.0" prefWidth="200.0" />

        <Button layoutX="370.0" layoutY="135.0" onAction="#handleValidate" text="Validate" prefWidth="100.0" />

        <Label fx:id="eligibilityLabel" layoutX="150.0" layoutY="170.0" textFill="blue" style="-fx-font-style: italic;" />

        <Button layoutX="44.0" layoutY="220.0" onAction="#handleConfirmChange" prefHeight="40.0" prefWidth="160.0" text="Confirm and Pay" />

        <Label fx:id="statusLabel" layoutX="150.0" layoutY="280.0" prefHeight="60.0" prefWidth="350.0"
               wrapText="true" textFill="green" style="-fx-font-style: italic;" />

        <Button layoutX="465.0" layoutY="320.0" onAction="#handleBackButton" prefHeight="40.0" prefWidth="94.0" text="Go Back" />

    </children>

</AnchorPane>
